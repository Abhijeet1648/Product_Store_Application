@model Product

@if (@TempData["Deleted"] != null )
{
    <h3> @TempData["Deleted"] </h3>
}

@{
    <form method="post">
    <div class="border p-3 mt-4" >
    <div class="row pb-3 text-center">
        <h4 class="text-primary">Delete Category</h4>
        <hr/>
    </div>

    <input type="hidden" asp-for="Id" />
    
    <div asp-validation-summary="All"></div>

    <div class="row mb-3">
    <label asp-for="Name">Name</label>
    <input disabled asp-for="Name" class="form-control"/>
    <span asp-validation-for="Name" class="danger"></span>
    </div>

    <div class="row mb-3">
    <label asp-for="DisplayOrder"> Display Order </label>
    <input disabled asp-for="DisplayOrder" class="form-control"/>
    <span asp-validation-for="DisplayOrder" class="danger"></span>
    </div>

    <div class="mt-3 text-center">
    <button onclick="myFun()" type="submit" class="btn btn-danger">Delete</button>
    </div>

    
    </div>
    </form>
    

    @section scripts{
        @{
            <partial name="_ValidationScriptsPartial"/>
        }
    }

    <div class="text-start">
    <hr/>
    <a class="mt-3 btn btn-primary" asp-action="Index" asp-controller="Category">Back To List</a>
    </div>
}
