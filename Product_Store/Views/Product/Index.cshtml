@model IEnumerable<Product>
@*@{
    ViewData["Title"] = "Index";
}*@
@Html.Raw(TempData["Created"])

@if (@TempData["Deleted"] != null )
{
    <script>
        alert("Product Deleted")
    </script>
    //<h5> @TempData["Deleted"] </h5>
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h4 class="text-primary">PRODUCTS</h4>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" style="border-radius:10px" asp-action="Create" asp-controller="Product">
                <i class="bi bi-plus-circle"></i> &nbsp;
                Create New Product
            </a>
        </div>
    </div>

</div>

<table class="table table-borderd table-striped" style="width:100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Name</th>
            <th>Display Order</th>
            <th style="text-align:center" >Action</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name 
                </td>
                <td>
                    @item.DisplayOrder
                </td>
                <td style="text-align:center">
                    <a class="btn" asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id">
                        
                        
                            <i class="bi bi-pencil-square"></i>
                            Edit 
                        
                    </a>
                    &ensp;
                    <a class="btn" asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id">
                        
                       
                            <i class="bi bi-trash"></i>
                            Delete
                       
                    </a>

                    &ensp;
                    <a class="btn" asp-action="Details" asp-controller="Product" asp-route-id="@item.Id">
                        
                       
                            <i class="bi bi-folder2-open"></i>
                            Details
                       
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

